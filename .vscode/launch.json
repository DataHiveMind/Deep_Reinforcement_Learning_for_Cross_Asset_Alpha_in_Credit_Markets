{
  "version": "0.2.0",
  "configurations": [
    {"name":"Python Debugger: Current File","type":"debugpy","request":"launch","program":"${file}","console":"integratedTerminal"},
    {
      "name": "Train: PPO Agent (Credit Spreads)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/agents/ppo_agent.py",
      "args": ["--config", "configs/ppo_credits.yaml"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Train: DQN Agent (Cross-Asset)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/agents/dqn_agent.py",
      "args": ["--config", "configs/dqn_crossasset.yaml"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Train: Constrained RL Agent",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/agents/constrained_agent.py",
      "args": ["--config", "configs/constrained_rl.yaml"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Backtest: Run Full Analysis",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backtests/backtest_runner.py",
      "args": ["--agent", "ppo", "--env", "cross_asset", "--costs", "realistic"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Dashboard: Streamlit App",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/dashboards/streamlit_app.py"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Dashboard: Dash App",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/dashboards/dash_app.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "-s"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug: Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
